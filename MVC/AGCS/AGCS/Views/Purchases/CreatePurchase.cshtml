
@{
    ViewData["Title"] = "Agregar Compra";
}
<script crossorigin="anonymous" src="~/js/CreatePurchase.js"></script>
<script>var sdi = @ViewBag.Supplier.Id;</script>

<div style="margin-top:4rem;" class="col-md-12">
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Proveedor</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped">
                                <tr class="header">
                                    <th style="width:20%;">DNI/CUIT</th>
                                    <th style="width:20%;">Nombre</th>
                                    <th style="width:15%;">Apellido</th>
                                    <th style="width:20%;">Razón Social</th>
                                    <th style="width:20%;">Nombre de Fantasía</th>
                                </tr>   
                                <tr>
                                    <td>@ViewBag.Supplier.Cuit </td>
                                    <td >@ViewBag.Supplier.Surname</td>
                                    <td>@ViewBag.Supplier.Name </td>
                                    <td>@ViewBag.Supplier.Company </td>
                                    <td>@ViewBag.Supplier.Fanciful_name </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="col-md-12">
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Compra<span class="ml-5">Total: </span><span id="total">0</span></strong>

                        </div>
                        <div id="divInput" class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="w-10">Codigo</th>
                                        <th class="w-31">Productos</th>
                                        <th class="w-12">Cantidad</th>
                                        <th style="width: 15%;">Costo</th>
                                        <th class="w-10">Precio x Menor</th>
                                        <th class="w-10">Precio x Mayor</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td> <input type="text" id="codProdToEnter" placeholder="Codigo del Producto" class="form-control text-black"></td>
                                        <td id="descProdToEnter"></td>
                                        <td class="validInput notEmpty validPositive"><input type="number" required min="1" id="quantProdToEnter" placeholder="Cantidad" class="loadToList form-control text-black"> <div class="validation_msg hidden text-center"></div></td>
                                        <td class="validInput notEmpty validPositive"><input type="number" required min="0" id="costProdToEnter" placeholder="Costo" class="loadToList form-control text-black"><div class="validation_msg hidden text-center"></div></td>
                                        <td class="validInput notEmpty validPositive"><input type="number" required min="1" id="priceProdToEnter" placeholder="Precio Menor" class="loadToList form-control text-black"><div class="validation_msg hidden text-center"></div></td>
                                        <td class="validInput notEmpty validPositive"><input type="number" required min="1" id="priceWProdToEnter" placeholder="Precio Mayor" class="loadToList form-control text-black"><div class="validation_msg hidden text-center"></div></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" style="height: 10px;" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Productos</th>
                                        <th class="w-12">Cantidad</th>
                                        <th class="w-10">Costo</th>
                                        <th class="w-10">Precio X Menor</th>
                                        <th class="w-10">Precio X Mayor</th>
                                        <th class="w-8">Eliminar</th>
                                    </tr>
                                </thead>
                                <tbody id="tableProducts"></tbody>
                            </table>
                            <button id="b" class="btn btn-success col-md-12">Agregar Compra</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Create Beg-->
<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <h5 class="modal-title" id="confirmationModal">Esta seguro que quiere eliminar el producto?</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" id="confirm" data-dismiss="modal" class="btn btn-primary">Confirmar</button>
            </div>
        </div>
    </div>
</div>


