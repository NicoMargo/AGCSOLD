@{
    @model AGCS.Models.Client
    string validInt(ulong number)
    {
        string value;
        if (number <= 0)
        {
            value = "-";
        }
        else
        {
            value = number.ToString();
        }
        return value;
    }

    string validString(string words)
    {
        if (words == "")
        {
            words = "-";
        }
        return words;
    }
}
<!doctype html>
<html lang="es">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Table.css">
    <link rel="stylesheet" href="~/css/MySiteCSS.css">
    <title>AGCS</title>
</head>

<body>
    <div class="m-5">
        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Usuarios</strong>
                    </div>
                    <div class="card-body">
                        <input type="text" id="searchInput" class="searchInput" placeholder="Buscar Usuario">
                        <button type="button" id="createUser" class="btn btn-primary w-100" data-toggle="modal" data-target=".bd-example-modal-xl">
                            Agregar Usuario
                        </button>

                        <table id="UsersTable" class="CRUDTable">
                            <tr class="header">
                                <th style="width:20%;">Apellido</th>
                                <th style="width:15%;">Nombre</th>
                                <th style="width:15%;">Dni</th>
                                <th style="width:10%;">Celular</th>
                                <th style="width:25%;">Email</th>
                                <th style="width:10%;">Modificar</th>
                                <th style="width:10%;">Eliminar</th>
                            </tr>
                            @{
                                for (int i = 0; i < ViewBag.Users.Count; i++)
                                {
                                    <tr class="tableRow">
                                        <td class="colSurname">@validString(ViewBag.Users[i].Surname)</td>
                                        <td class="colName">@validString(ViewBag.Users[i].Name)</td>
                                        <td class="colDNI">@validInt(ViewBag.Users[i].Dni)</td>
                                        <td>@validString(ViewBag.Users[i].Cellphone)</td>
                                        <td>@validString(ViewBag.Users[i].Email)</td>
                                        <td><a data-toggle="modal" data-target="#updateClient"><img position="@ViewBag.Users[i].Id" class="imgClientUpdate" src="~/images/edit.png" /></a></td>
                                        <td><a data-toggle="modal" data-target="#confirmationModal"><deleteButton position="@ViewBag.Users[i].Id"><img class="w-50" src="~/images/delete.png" /></deleteButton></a></td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Create Beg-->
    <div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h5 class="modal-title" id="confirmationModal">Esta seguro que quiere eliminar al usuario?</h5>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" id="confirm" class="btn btn-primary">Confirmar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Extra large modal Create-->
    <div class="modal fade bd-example-modal-xl" id="createUser" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Crear Usuario</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="row justify-content-center mt-3">
                        <div class="col-md-3">
                            <div class="text-center">
                                <strong><span>Apellido</span></strong>
                            </div>
                            <input id="modalCreateSurname" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgCreateSurname">Ingrese un apellido válido</div>
                        </div>
                        <div class="ml-5 col-md-3">
                            <div class="text-center">
                                <strong><span>Nombre</span></strong>
                            </div>
                            <input id="modalCreateName" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgCreateName">Ingrese un nombre válido</div>
                        </div>

                        <div class="ml-5 col-md-3">
                            <div class="text-center">
                                <strong><span>Segundo Nombre</span></strong>
                            </div>
                            <input id="modalCreateSecondName" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgCreateSecondName">Ingrese un Segundo nombre válido</div>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-4">
                        <div class="col-md-3">
                            <div class="text-center">
                                <strong><span>Email</span></strong>
                            </div>
                            <input id="modalCreateEmail" class="form-control text-center" type="email">
                            <div class="validation_msg hidden text-center" id="msgCreateEmail">Ingrese un email válido</div>
                        </div>
                        <div class="ml-5 col-md-3">
                            <div class="text-center">
                                <strong><span>Contraseña</span></strong>
                            </div>
                            <input id="modalCreatePassword" class="form-control text-center" type="password">
                            <div class="validation_msg hidden text-center" id="msgCreatePassword">Ingrese una contraseña válida</div>
                        </div>
                        <div class="ml-5 col-md-3">
                            <div class="text-center">
                                <strong><span>Confirmar Contraseña</span></strong>
                            </div>
                            <input id="modalCreateConfirmPassword" class="form-control text-center" type="password">
                            <div class="validation_msg hidden text-center" id="msgCreateConfirmPassword">Confirmar contraseña</div>
                        </div>
                    </div>

                    <div class="row justify-content-center mt-4">
                        <div class="col-md-3">
                            <div class="text-center">
                                <strong><span>Nro. Teléfono</span></strong>
                            </div>
                            <input id="modalCreateTelephone" class="form-control text-center" type="number" min="0">
                            <div class="validation_msg hidden text-center" id="msgCreateTelephone">Ingrese un teléfono válido</div>
                        </div>
                        <div class="ml-5 col-md-3">
                            <div class="text-center">
                                <strong><span>Nro. Celular</span></strong>
                            </div>
                            <input id="modalCreateCellphone" class="form-control text-center" type="number" min="0">
                            <div class="validation_msg hidden text-center" id="msgCreateCellphone">Ingrese un nro. celular válido</div>
                        </div>
                        <div class="ml-5 col-md-3">
                            <div class="text-center">
                                <strong><span>Dni</span></strong>
                            </div>
                            <input id="modalCreateDni" class="form-control text-center" type="number" min="0">
                            <div class="validation_msg hidden text-center" id="msgCreateDni">Ingrese Dni</div>
                        </div>
                    </div>
                    <div class="text-center offset-md-1 mt-5">
                        <h4 class="badge-pill col-md-11 badge-danger">Dirección</h4>
                    </div>
                    <div class="row justify-content-center mt-4">
                        <div class="col-md-10">       
                            <input id="modalCreateAddress" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgCreateTelephone">Ingrese una Dirección</div>
                        </div>
                    </div>

                    <div class="row justify-content-center mt-5">
                        <div class="col-md-3">
                            <div class="text-center">
                                <strong><span>Nro. Teléfono Madre</span></strong>
                            </div>
                            <input id="modalCreateTelephoneMother" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgCreateTelephone">Ingrese un teléfono válido</div>
                        </div>
                        <div class="ml-5 col-md-3">
                            <div class="text-center">
                                <strong><span>Nro. Teléfono Padre</span></strong>
                            </div>
                            <input id="modalCreateTelephoneFather" class="form-control text-center">
                            <div class="validation_msg hidden text-center" id="msgCreateCellphone">Ingrese un nro. celular válido</div>
                        </div>
                        <div class="ml-5 col-md-3">
                            <div class="text-center">
                                <strong><span>Nro. Teléfono Hermano</span></strong>
                            </div>
                            <input id="modalCreateTelephoneBrother" class="form-control text-center" type="email">
                            <div class="validation_msg hidden text-center" id="msgCreateEmail">Ingrese un email válido</div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secundary" id="createCancel" data-dismiss="modal">Cerrar</button>
                    <button class="btn btn-primary" id="newUser">Crear</button>
                </div>

            </div>
        </div>
    </div>
    <!-- Modal Create END-->
    <!-- Modal Update Beginning-->
    <div class="modal fade bd-example-modal-xl" id="updateClient" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Datos Del Usuario</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <div class="row">
                        <div class="offset-md-1 col-md-2">
                            <div class="text-center">
                                <strong><span>Apellido</span></strong>
                            </div>
                            <input id="modalUpdateSurname" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgUpdateSurname">Ingrese un apellido válido</div>
                        </div>
                        <div class="offset-md-1 col-md-3">
                            <div class="text-center">
                                <strong><span>Nombre</span></strong>
                            </div>
                            <input id="modalUpdateName" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgUpdateName">Ingrese un nombre válido</div>
                        </div>
                        <div class="offset-md-1 col-md-2">
                            <div class="text-center">
                                <strong><span>DNI/CUIT/CUIL</span></strong>
                            </div>
                            <input id="modalUpdateDni" class="form-control text-center" type="number" min="0">
                            <div class="validation_msg hidden text-center" id="msgUpdateDni">Ingrese un DNI o CUIT válido</div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="offset-md-1 col-md-2">
                            <div class="text-center">
                                <strong><span>Nro. Telefono</span></strong>
                            </div>
                            <input id="modalUpdateTelephone" class="form-control text-center" type="number" min="0">
                            <div class="validation_msg hidden text-center" id="msgUpdateTelephone">Ingrese un teléfono válido</div>
                        </div>
                        <div class="offset-md-1 col-md-3">
                            <div class="text-center">
                                <strong><span>Nro. Celular</span></strong>
                            </div>
                            <input id="modalUpdateCellphone" class="form-control text-center" type="number" min="0">
                            <div class="validation_msg hidden text-center" id="msgUpdateCellphone">Ingrese un nro. celular válido</div>
                        </div>
                        <div class="offset-md-1 col-md-2">
                            <div class="text-center">
                                <strong><span>Email</span></strong>
                            </div>
                            <input id="modalUpdateEmail" class="form-control text-center" type="email">
                            <div class="validation_msg hidden text-center" id="msgUpdateEmail">Ingrese un email válido</div>
                        </div>
                    </div>
                    <div class="text-center mt-5">
                        <h4 class="badge-pill badge-danger">Dirección</h4>
                    </div>
                    <div class="row mt-4">
                        <div class="offset-md-1 col-md-2">
                            <div class="text-center">
                                <strong><span>Localidad</span></strong>
                            </div>
                            <input id="modalUpdateTown" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgUpdateTown">Ingrese un  válido</div>
                        </div>
                        <div class="offset-md-1 col-md-3">
                            <div class="text-center">
                                <strong><span>Direccion</span></strong>
                            </div>
                            <input id="modalUpdateAddress" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgUpdateAddress">Ingrese un  válido</div>
                        </div>
                        <div class="offset-md-1 col-md-2">
                            <div class="text-center">
                                <strong><span>Provincia</span></strong>
                            </div>
                            <select class="form-control">
                                <option value="CABA">CABA</option>
                                <option value="Buenos Aires">Buenos Aires</option>
                                <option value="Mendoza">Mendoza</option>
                                <option value="Santa Fé">Santa Fe</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="offset-md-1 col-md-2">
                            <div class="text-center">
                                <strong><span>Número</span></strong>
                            </div>
                            <input id="modalUpdateNumber" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgUpdateNumber">Ingrese un  válido</div>
                        </div>
                        <div class="offset-md-1 col-md-3">
                            <div class="text-center">
                                <strong><span>Piso</span></strong>
                            </div>
                            <input id="modalUpdateFloor" class="form-control text-center" type="number" min="0">
                            <div class="validation_msg hidden text-center" id="msgUpdateFloor">Ingrese un  válido</div>
                        </div>
                        <div class="offset-md-1 col-md-2">
                            <div class="text-center">
                                <strong><span>Letra</span></strong>
                            </div>
                            <input id="modalUpdateAppartment" class="form-control text-center" type="text">
                            <div class="validation_msg hidden text-center" id="msgUpdateAppartment">Ingrese un  válido</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secundary" id="updateCancel" data-dismiss="modal">Cerrar</button>
                    <button class="btn btn-primary" id="UpdateSubmit">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal Update END-->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="~/js/UsersCRUD.js"></script>
</body>
</html>