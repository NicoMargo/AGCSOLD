<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AGCS</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/CSS/Bootstrap.css">
        <link rel="stylesheet" href="~/css/Layout.css" />
    </environment>
</head>
<body>
    <nav class="row sticky-top">
        <div class="bg-danger w-100">

            <a href="~/Backend">
                <h1 class="pl-5 offset-md-1 text-white float-left">AGCS</h1>
            </a>
            <div class="offset-md-7 pt-2">
                <span class="text-white">@Sessionh.GetSString("business")</span>
                <span class="ml-2 mr-2 text-white">|</span>
                <span class="text-white">@Sessionh.GetSString("username")</span>
                <span class="ml-2 mr-2 text-white">|</span>
                <img src="~/images/icon-user.png" alt="icono-User" class="w-5 mr-5">
                @Html.ActionLink("Cerrar Sesión", "Index", "Home",null, new {@class = "btn btn-primary"})
            </div>
        </div>
    </nav>
    <aside class=" h-750 position-fixed bg-dark w-5 float-left text-center">
        <a href=""><img class="mt-4 w-60" src="~/images/camion.png" alt=""></a><br>
        <a href=""><img class="mt-4 w-60" src="~/images/dinero.png" alt=""></a><br>
        <a href=""><img class="mt-4 w-60" src="~/images/clientes.png" alt=""></a><br>
        <a href=""><img class="mt-4 w-60" src="~/images/proveedores.png" alt=""></a><br>
        <a href=""><img class="mt-4 w-60" src="~/images/diagrama.png" alt=""></a><br>
        <a href="/Backend/Configuration"><img class="mt-4 w-60" src="~/images/ajustes.png" alt=""></a>
    </aside>
    <div class=" h-750 bg-dark w-5 float-left">
        
    </div>
    @RenderBody()
    <footer>
        <p>&copy; 2019 - AGCS</p>
    </footer>
    <environment include="Development">
        <script src="~/lib/Jquery 3.4.1.js" crossorigin="anonymous"></script>
        <script src="~/lib/bootstrap/JS/Bootstrap JS 4.3.1.js" crossorigin="anonymous"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
