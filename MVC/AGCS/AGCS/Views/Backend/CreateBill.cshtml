
@{
    ViewData["Title"] = "Facturar";
}
<div class="col-md-12">
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Venta <span class="ml-5">Total: </span><span id="total">0</span></strong>
                            
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="w-10">Codigo</th>
                                        <th class="w-31">Productos</th>
                                        <th class="w-12">Cantidad</th>
                                        <th style="width: 15%;">Precio</th>
                                        <th class="w-20">Cantidad en Stock</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td> <input type="text" id="codProdToEnter" placeholder="Codigo del Producto" class="form-control text-black"></td>
                                        <td id="descProdToEnter"></td>
                                        <td><input type="number" id="quantProdToEnter" placeholder="Cantidad" class="form-control text-black"></td>
                                        <td><span id="priceProdToEnter"></span></td>
                                        <td><span id="stockProdToEnter"></span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" style="height: 10px;" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Productos</th>
                                        <th class="w-12">Cantidad</th>
                                        <th class="w-16">Precio</th>
                                        <th class="w-16">Cantidad en Stock</th>
                                        <th class="w-8">Eliminar</th>
                                    </tr>
                                </thead>
                                <tbody id="tableProducts">                                  
                                </tbody>
                            </table>
                            <button id="b" class="btn btn-primary col-md-12">Facturar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="~/lib/Jquery 3.4.1.js" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"crossorigin="anonymous"></script>
<script src="~/js/CreateBill.js"></script>

